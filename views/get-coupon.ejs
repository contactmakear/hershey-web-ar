<script>
    document.addEventListener('DOMContentLoaded', e => {
            var confettiVideo = document.querySelector(".confetti-video-file");

            confettiVideo.addEventListener('ended', e => {
                confettiVideo.parentElement.style.display = "none";
            });
        });
    </script>
