    <div class="coupon-video">
        <div id="confetti" class="confetti-video">
            <video class="confetti-video-file" src="/videos/confetti_VP9.webm" autoplay muted></video>
        </div>
        <video class="get-coupon-video" src="/videos/get_coupon_VP9.webm" autoplay muted></video>
